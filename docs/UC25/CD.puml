left to right direction


class RealizaEncomendaUI {
    
}

class RealizaEncomendaController {
    +getCliente()
    +produtoEncomenda(produto)
    +registaEncomenda(enc)
    +novoRecibo(nifCliente, lista, precoTotal, dataRecibo)
    +verificaProdutoStock(prod)
    +getPrecoTotal()
